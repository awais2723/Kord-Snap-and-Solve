{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["DOM", "ESNext"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@firebase/auth": ["./node_modules/@firebase/auth/dist/index.rn.d.ts"]
    },
    "types": [
      "node",
      "jest",
      "expo-router/types",
      "@testing-library/jest-native",
      "@testing-library/jest-dom"
    ]
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "*.d.ts", "expo-env.d.ts"],
  "exclude": ["node_modules", "*.config.js", "eslint.config.js", ".prettierrc"]
}
