{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "node",
      "jest",
      "expo-router/types",
      "@testing-library/jest-native",
      "@testing-library/jest-dom"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "*.d.ts",
    "expo-env.d.ts"
, "src/styles/index.js"  ],
  "exclude": [
    "node_modules",
    "*.config.js",
    "eslint.config.js",
    ".prettierrc"
  ]
}
